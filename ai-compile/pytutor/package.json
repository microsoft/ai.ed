{
	"name": "python-tutor",
	"displayName": "Python Tutor",
	"description": "Python Tutor Extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.55.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:python"
	],
	"icon": "icons/icon.png",
	"main": "./out/extension.js",

	"contributes": {
        "commands": [
            {
                "command": "python-tutor.beginner-mode",
                "title": "Beginner Mode",
                "icon": {
                    "light": "./icons/expert.svg",
                    "dark": "./icons/expert.svg"
                }
            },			
            {
                "command": "python-tutor.expert-mode",
                "title": "Expert Mode",
                "icon": {
                    "light": "./icons/beginner.svg",
                    "dark": "./icons/beginner.svg"
                }
            }            
        ],
		"menus": {
			"editor/title": [
				{
					"when": "pythontutor.beginner",
					"command": "python-tutor.expert-mode",
					"group": "navigation"
				},
				{
					"when": "pythontutor.expert",
					"command": "python-tutor.beginner-mode",
					"group": "navigation"
				}
			]
		}
    },
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.28.1",
		"@typescript-eslint/parser": "^4.28.1",
		"eslint": "^7.29.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.1.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"prettier": "^2.2.1",
		"typescript": "^4.2.4",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"npm": "^7.10.0",
		"tsc-watch": "^4.2.9"
	}
}
